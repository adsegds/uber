// ==== ã‚«ãƒ†ã‚´ãƒª2ã”ã¨ã«ã‚°ãƒ«ãƒ¼ãƒ—åˆ†ã‘ã™ã‚‹ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£ ====
function groupByCategory2(items) {
  const map = {};
  for (const item of items) {
    // category2Name ãŒç©ºãªã‚‰ã€Œãã®ä»–ã€ã«ã¾ã¨ã‚ã‚‹
    const key = item.category2Name || "ãã®ä»–";
    if (!map[key]) {
      map[key] = [];
    }
    map[key].push(item);
  }
  return map; // { "ç‚­é…¸": [item, item...], "å¤§å®¹é‡": [...], ... }
}





  


  // â˜… ã•ã£ããƒ¡ãƒ¢ã—ãŸ firebaseConfig ã‚’ãã®ã¾ã¾ä½¿ã†
  const firebaseConfig = {
