 // ================= ãƒ›ãƒ¼ãƒ ï¼ˆæ¨ªã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ£šï¼‰ =================
function renderHomeSections() {
  homeSectionsEl.innerHTML = "";

  CATEGORIES.forEach(cat => {
    // â˜…ã‚«ãƒ†ã‚´ãƒª1ã®åå‰ï¼ˆcategory1Nameï¼‰ã§çµã‚Šè¾¼ã‚€
    const itemsForCat = ITEMS.filter(i => i.category1Name === cat.label);
    if (!itemsForCat.length) return;

    const section = document.createElement("section");
    section.className = "home-section";

    section.innerHTML = `
      <div class="home-section-header">
        <h3 class="home-section-title">${cat.label}</h3>
        <button class="home-section-arrow" data-category="${cat.id}">âœ</button>
      </div>
      <div class="home-scroll">
        ${itemsForCat.map(item => `
          <div class="home-item-card">
            <div class="home-thumb-wrap">
  <img src="${item.imageUrl}" alt="${item.name}">
  <button class="home-plus-btn" data-id="${item.id}">ï¼‹</button>
</div>

            <div class="home-item-info">
              <div class="home-item-price">Â¥${(item.price ?? 0).toLocaleString()}</div>
              <div class="home-item-name">${item.name}</div>
            </div>
          </div>
        `).join("")}
      </div>
    `;

    homeSectionsEl.appendChild(section);
  });

  // ï¼‹ãƒœã‚¿ãƒ³ â†’ ã‚«ãƒ¼ãƒˆã«è¿½åŠ 
  homeSectionsEl.querySelectorAll(".home-plus-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const id = btn.getAttribute("data-id");
      addToCart(id);
    });
  });

  // çŸ¢å° â†’ ãã®ã‚«ãƒ†ã‚´ãƒªã®ä¸€è¦§ã¸
  homeSectionsEl.querySelectorAll(".home-section-arrow").forEach(btn => {
    btn.addEventListener("click", () => {
      const cat = btn.getAttribute("data-category");

      document.querySelectorAll(".category-tab").forEach(tab => {
        tab.classList.toggle(
          "active",
          tab.getAttribute("data-category") === cat
        );
      });

      currentCategory = cat;
      renderItems();
      showListView();
    });
  });
}




// ===== é£²æ–™ã‚¿ãƒ–å°‚ç”¨ï¼šã‚«ãƒ†ã‚´ãƒª2ã”ã¨ã«ã‚»ã‚¯ã‚·ãƒ§ãƒ³åˆ†ã‘ã—ã¦è¡¨ç¤º =====
function renderDrinkList() {
  // ãƒ¬ã‚¤ã‚¢ã‚¦ãƒˆã‚’ã€Œç¸¦ã«æ®µã€…ã€ç”¨ã«å¤‰æ›´
  itemListEl.classList.add("grouped");
  itemListEl.innerHTML = "";

  // â˜…ã‚«ãƒ†ã‚´ãƒª1ãŒã€Œé£²æ–™ã€ã®å•†å“ã ã‘
  const drinkItems = ITEMS.filter(
    item => item.category1Name === "é£²æ–™"
  );

  if (!drinkItems.length) {
    itemListEl.innerHTML = `<p class="order-empty-text">é£²æ–™ã®å•†å“ãŒã‚ã‚Šã¾ã›ã‚“ã€‚</p>`;
    return;
  }

  // ã‚«ãƒ†ã‚´ãƒª2ã§ã‚°ãƒ«ãƒ¼ãƒ—åˆ†ã‘
  const groups = groupByCategory2(drinkItems); // { "ç‚­é…¸": [...], "ã‚³ãƒ¼ãƒ’ãƒ¼": [...], ... }
  const sectionNames = Object.keys(groups).sort();

  sectionNames.forEach(sectionName => {
    const sectionEl = document.createElement("section");
    sectionEl.className = "front-category-section";

    sectionEl.innerHTML = `
      <h2 class="front-category-heading">${sectionName}</h2>
      <div class="front-category-row">
        ${groups[sectionName].map(item => `
          <div class="home-item-card">
            <div class="home-thumb-wrap">
  <img src="${item.imageUrl}" alt="${item.name}">
  <button class="home-plus-btn" data-id="${item.id}">ï¼‹</button>
</div>

            <div class="home-item-info">
              <div class="home-item-price">Â¥${(item.price ?? 0).toLocaleString()}</div>
              <div class="home-item-name">${item.name}</div>
            </div>
          </div>
        `).join("")}
      </div>
    `;

    itemListEl.appendChild(sectionEl);
  });

  // ï¼‹ãƒœã‚¿ãƒ³ â†’ ã‚«ãƒ¼ãƒˆã«è¿½åŠ 
  itemListEl.querySelectorAll(".home-plus-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const id = btn.getAttribute("data-id");
      addToCart(id);
    });
  });
}



  
  // ================= ã‚«ãƒ†ã‚´ãƒªåˆ¥ ç¸¦ä¸€è¦§ =================
function renderItems() {
  // ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆã¯ã€Œã‚°ãƒªãƒƒãƒ‰è¡¨ç¤ºã€ã«æˆ»ã™
  itemListEl.classList.remove("grouped");
  itemListEl.innerHTML = "";

  // â˜…é£²æ–™ã‚¿ãƒ–ã ã‘ã¯ã€Œã‚«ãƒ†ã‚´ãƒª2ã”ã¨ã€ã«åˆ†ã‘ã¦è¡¨ç¤º
  if (currentCategory === "drink") {
    renderDrinkList();
    return;
  }

  // currentCategory â†’ category1Name ã®å¯¾å¿œè¡¨
  let targetCategory1Name = null;
  if (currentCategory === "hotsnack") {
    targetCategory1Name = "ãƒ›ãƒƒãƒˆã‚¹ãƒŠãƒƒã‚¯";
  } else if (currentCategory === "bread") {
    targetCategory1Name = "ãƒ‘ãƒ³";
  } else if (currentCategory === "limited") {
    targetCategory1Name = "å–ã‚Šç½®ãé™å®š";
  }
  // â€» å¿…è¦ã«å¿œã˜ã¦ã“ã“ã«å¢—ã‚„ã—ã¦ã„ã‘ã°OK

  const filtered = ITEMS.filter(item => {
    if (currentCategory === "all") return true;
    if (!targetCategory1Name) return true; // å¿µã®ãŸã‚
    return item.category1Name === targetCategory1Name;
  });

  if (!filtered.length) {
    itemListEl.innerHTML = `<p class="order-empty-text">å•†å“ãŒã‚ã‚Šã¾ã›ã‚“ã€‚</p>`;
    return;
  }

  filtered.forEach(item => {
    const card = document.createElement("div");
    card.className = "home-item-card";

    card.innerHTML = `
  <div class="home-thumb-wrap">
    <img src="${item.imageUrl}" alt="${item.name}">
    <button class="home-plus-btn" data-id="${item.id}">ï¼‹</button>
  </div>
  <div class="home-item-info">
    <div class="home-item-price">Â¥${(item.price ?? 0).toLocaleString()}</div>
    <div class="home-item-name">${item.name}</div>
  </div>
`;


    itemListEl.appendChild(card);
  });

  itemListEl.querySelectorAll(".home-plus-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const id = btn.getAttribute("data-id");
      addToCart(id);
    });
  });
}


  // ================= ã‚«ãƒ¼ãƒˆå‡¦ç† =================
  function addToCart(id) {
    const target = ITEMS.find(i => i.id === id);
    if (!target) return;

    const existing = cart.find(c => c.id === id);
    if (existing) {
      existing.qty += 1;
    } else {
      cart.push({ id: target.id, name: target.name, price: target.price, qty: 1 });
    }
    updateCartView();
  }

  function updateCartView() {
    const totalQty = cart.reduce((sum, item) => sum + item.qty, 0);
    const totalPrice = cart.reduce((sum, item) => sum + item.price * item.qty, 0);
    cartCountEl.textContent = totalQty;

    cartListEl.innerHTML = "";
    if (cart.length === 0) {
      emptyCartMsg.classList.remove("hidden");
      orderForm.classList.add("hidden");
      cartTotalEl.textContent = "";
    } else {
      emptyCartMsg.classList.add("hidden");
      orderForm.classList.remove("hidden");

      let localTotal = 0;
      cart.forEach((item, index) => {
        localTotal += item.price * item.qty;

        const row = document.createElement("div");
        row.className = "cart-row";
        row.innerHTML = `
          <div class="cart-row-main">
            <div class="cart-row-name">${item.name}</div>
            <div class="cart-row-controls">
              <button class="cart-icon-btn" data-index="${index}" data-action="remove">ğŸ—‘</button>
              <button class="cart-circle-btn" data-index="${index}" data-action="minus">âˆ’</button>
              <span class="cart-qty">${item.qty}</span>
              <button class="cart-circle-btn" data-index="${index}" data-action="plus">ï¼‹</button>
            </div>
          </div>
          <div class="cart-row-price">Â¥${(item.price * item.qty).toLocaleString()}</div>
        `;
        cartListEl.appendChild(row);
      });

      cartTotalEl.textContent = `åˆè¨ˆï¼šÂ¥${localTotal.toLocaleString()}ï¼ˆç¨è¾¼ã¿ç›®å®‰ï¼‰`;
    }

    if (totalQty === 0) {
      cartBar.classList.add("hidden");
    } else {
      cartBar.classList.remove("hidden");
      cartBarLine1.textContent = `${totalQty}ç‚¹ ãƒ» Â¥${totalPrice.toLocaleString()}`;
    }

    // è¡Œã®ãƒœã‚¿ãƒ³ã«ã‚¤ãƒ™ãƒ³ãƒˆä»˜ã‘
    cartListEl.querySelectorAll(".cart-icon-btn, .cart-circle-btn").forEach(btn => {
      btn.addEventListener("click", () => {
        const index  = Number(btn.dataset.index);
        const action = btn.dataset.action;
        if (action === "remove") {
          removeFromCart(index);
        } else if (action === "minus") {
          changeCartQty(index, -1);
        } else if (action === "plus") {
          changeCartQty(index, 1);
        }
      });
    });
  }

  function changeCartQty(index, delta) {
    const item = cart[index];
    if (!item) return;
    item.qty += delta;
    if (item.qty <= 0) {
      cart.splice(index, 1);
    }
    updateCartView();
  }

  function removeFromCart(index) {
    cart.splice(index, 1);
    updateCartView();
  }

  // ================= ç”»é¢åˆ‡ã‚Šæ›¿ãˆ =================
  function showListView() {
    homeView.classList.add("hidden");
    listView.classList.remove("hidden");
    cartView.classList.add("hidden");
    completeView.classList.add("hidden");
    ordersView.classList.add("hidden");
    storeView.classList.add("hidden");
  }

  function showCartView() {
    homeView.classList.add("hidden");
    listView.classList.add("hidden");
    cartView.classList.remove("hidden");
    completeView.classList.add("hidden");
    ordersView.classList.add("hidden");
    storeView.classList.add("hidden");
    updateCartView();
  }

  function showHomeView() {
    homeView.classList.remove("hidden");
    listView.classList.add("hidden");
    cartView.classList.add("hidden");
    completeView.classList.add("hidden");
    ordersView.classList.add("hidden");
    storeView.classList.add("hidden");
  }

  function showStoreView() {
    homeView.classList.add("hidden");
    listView.classList.add("hidden");
    cartView.classList.add("hidden");
    completeView.classList.add("hidden");
    ordersView.classList.add("hidden");
    storeView.classList.remove("hidden");
  }

  function showCompleteView(orderId) {
    homeView.classList.add("hidden");
    listView.classList.add("hidden");
    cartView.classList.add("hidden");
    completeView.classList.remove("hidden");
    ordersView.classList.add("hidden");
    storeView.classList.add("hidden");

    completeMessage.innerHTML = `
      ã”æ³¨æ–‡ã‚ã‚ŠãŒã¨ã†ã”ã–ã„ã¾ã™ã€‚<br>
      æ³¨æ–‡ç•ªå·ï¼š<strong>${orderId}</strong><br>
      å—ã‘å–ã‚Šæ™‚é–“ï¼š${timeSelect.value || "æœªæŒ‡å®š"}<br>
      ã‚¹ã‚¿ãƒƒãƒ•ã«ã“ã®ç•ªå·ã‚’ãŠä¼ãˆãã ã•ã„ã€‚
    `;
  }

  function showOrdersView() {
    homeView.classList.add("hidden");
    listView.classList.add("hidden");
    cartView.classList.add("hidden");
    completeView.classList.add("hidden");
    ordersView.classList.remove("hidden");
    storeView.classList.add("hidden");
  }

  // ================= æ³¨æ–‡ç¢ºå®šï¼ˆFirestoreä¿å­˜ç‰ˆï¼‰ =================
async function handleOrder() {
  if (cart.length === 0) {
    alert("ã‚«ãƒ¼ãƒˆãŒç©ºã§ã™ã€‚");
    return;
  }
  if (!nameInput.value || !telInput.value || !timeSelect.value) {
    alert("ãŠåå‰ãƒ»é›»è©±ç•ªå·ãƒ»å—ã‘å–ã‚Šæ™‚é–“ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚");
    return;
  }

  try {
    // Firestore ã«ä¿å­˜ã™ã‚‹ãƒ‡ãƒ¼ã‚¿ã‚’ä½œæˆ
    const orderData = {
      storeId: "lawson-nanbu-1",
      status: "new",
      customerName: nameInput.value,
      tel: telInput.value,
      pickupTime: timeSelect.value,
      items: cart.map(item => ({
        id: item.id,
        name: item.name,
        qty: item.qty,
        price: item.price
      })),
      total: cart.reduce((sum, item) => sum + item.price * item.qty, 0),
      createdAt: serverTimestamp()   // â† Firebase ã«æ™‚é–“ã‚’è‡ªå‹•ã§å…¥ã‚Œã•ã›ã‚‹
    };

    // Firestore ã«è¿½åŠ 
    const docRef = await addDoc(collection(db, "orders"), orderData);

    // å®Œäº†ç”»é¢ã¸
    showCompleteView(docRef.id);

    // ã‚«ãƒ¼ãƒˆåˆæœŸåŒ–
    cart = [];
    updateCartView();
    nameInput.value = "";
    telInput.value = "";
    timeSelect.value = "";

  } catch (err) {
    console.error("æ³¨æ–‡ä¿å­˜ã‚¨ãƒ©ãƒ¼:", err);
    alert("æ³¨æ–‡ã®ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸã€‚æ™‚é–“ã‚’ãŠã„ã¦å†åº¦ãŠè©¦ã—ãã ã•ã„ã€‚");
  }
}


  // ================= ã‚¤ãƒ™ãƒ³ãƒˆ =================
  // ã‚«ãƒ†ã‚´ãƒªã‚¿ãƒ–
  categoryTabsEl.addEventListener("click", (e) => {
    if (!e.target.classList.contains("category-tab")) return;

    document.querySelectorAll(".category-tab").forEach(tab =>
      tab.classList.remove("active")
    );
    e.target.classList.add("active");

    const cat = e.target.getAttribute("data-category");
    currentCategory = cat;

    if (cat === "all") {
      showHomeView();
    } else {
      renderItems();
      showListView();
    }
  });

  cartButton.addEventListener("click", showCartView);
  cartBarInner.addEventListener("click", showCartView);

  // æ³¨æ–‡ã‚¿ãƒ–åˆ‡ã‚Šæ›¿ãˆ
  document.querySelectorAll(".order-tab").forEach(tab => {
    tab.addEventListener("click", () => {
      document.querySelectorAll(".order-tab").forEach(t =>
        t.classList.remove("active")
      );
      tab.addEventListener("click", () => {});
      tab.classList.add("active");

      const tabId = tab.getAttribute("data-tab");
      if (tabId === "items") {
        orderItemsPanel.classList.remove("hidden");
        orderHistoryPanel.classList.add("hidden");
      } else {
        orderItemsPanel.classList.add("hidden");
        orderHistoryPanel.classList.remove("hidden");
      }
    });
  });

  // ã€Œæ³¨æ–‡ã‚’é–‹å§‹ã™ã‚‹ã€ãƒœã‚¿ãƒ³ â†’ ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã¸æˆ»ã™
  document.getElementById("startOrderBtn").addEventListener("click", () => {
    currentCategory = "all";
    document.querySelectorAll(".category-tab").forEach(tab => {
      tab.classList.toggle("active", tab.getAttribute("data-category") === "all");
    });
    showHomeView();
  });
  document.getElementById("startOrderBtn2").addEventListener("click", () => {
    currentCategory = "all";
    document.querySelectorAll(".category-tab").forEach(tab => {
      tab.classList.toggle("active", tab.getAttribute("data-category") === "all");
    });
    showHomeView();
  });

  // ä¸‹ãƒ¡ãƒ‹ãƒ¥ãƒ¼
  toListBtn.addEventListener("click", () => {
    if (currentCategory === "all") {
      showHomeView();
    } else {
      showListView();
    }
  });
  orderBtn.addEventListener("click", showOrdersView);
  storeBtn.addEventListener("click", showStoreView);

  // ã‚«ãƒ¼ãƒˆãƒãƒ¼ã®ãƒœã‚¿ãƒ³ â†’ æ³¨æ–‡ç¢ºå®š
  document.querySelector(".cart-bar-btn").addEventListener("click", (e) => {
    e.stopPropagation();
    handleOrder();
  });

  // ================= åˆæœŸå‡¦ç†ï¼šFirestore ã‹ã‚‰å•†å“èª­ã¿è¾¼ã¿ =================
  loadItemsFromFirestore();
</script>


