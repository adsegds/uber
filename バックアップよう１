  const cartBarInner    = document.getElementById("cartBarInner");

  let currentCategory = "all";
  let cart = [];

  // ============ Firestore ã‹ã‚‰ items ã‚’èª­ã‚€ ============
  async function loadItemsFromFirestore() {
    try {
      const snap = await getDocs(collection(db, "items"));
      ITEMS = snap.docs.map(doc => ({
        id: doc.id,
        ...doc.data()
      }));

      // ãƒ‡ãƒ¼ã‚¿ã‚’å–ã£ã¦ããŸã‚ã¨ã« UI ã‚’æç”»
      renderHomeSections();
      renderItems();
      showHomeView();
      updateCartView();
    } catch (err) {
      console.error("Firestore èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:", err);
      alert("å•†å“ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸã€‚æ™‚é–“ã‚’ãŠã„ã¦å†åº¦ãŠè©¦ã—ãã ã•ã„ã€‚");
    }
